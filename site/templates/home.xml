<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<cms:var name="_DOCTYPE"/>
	<html lang="$language" cms:eval="lang">
		<head>
			<title><cms:text constant="site_title"/></title>
			<cms:collection include="page_control"/>
			<cms:module name="head_tag" action="print_tag"/>
			<cms:raw file="parts/gtm.txt"/>
		</head>

		<body class="$language_rtl ? 'rtl' : 'ltr'" cms:eval="class">
			<header>
				<cms:svg file="../images/site-icons.svg"/>
				<div class="menu">
						<a href="javascript:void(0)" class="google"></a>
						<a href="url_Make('', 'home')" class="logo" cms:eval="href"></a>
						<cms:desktop>
						<a
							href="'tel:'.urlencode(Language::getText('phone'))"
							cms:eval="href"
							class="phone"
							>
							<cms:text constant="phone"/>
							<svg>
								<use
									href="#icon-phone"
									xlink:href="site/images/site-icons.svg#icon-phone"
									/>
							</svg>
						</a>
						</cms:desktop>

						<cms:mobile>
							<a
								href="'tel:'.urlencode(Language::getText('phone'))"
								cms:eval="href"
								class="phone"
								>
									<svg>
										<use
											href="#icon-phone"
											xlink:href="site/images/site-icons.svg#icon-phone"
											/>
									</svg>
								</a>
						</cms:mobile>
				</div>
			</header>

			<section class="top_site">

					<cms:module
						name="articles"
						action="show"
						text_id="header_article"
						template="parts/article.xml"
						/>
					<a
						href="'tel:'.urlencode(Language::getText('phone'))"
						cms:eval="href"
						class="phone"
						>
						<cms:text constant="phone"/>
						<svg>
							<use
								href="#icon-phone"
								xlink:href="site/images/site-icons.svg#icon-phone"
								/>
						</svg>
					</a>

					<cms:desktop>
						<div class="form_wrap">
							<p><cms:text constant="form_title"/></p>
							<cms:module
								name="contact_form"
								action="show"
								text_id="contact"
								/>
						</div>
					</cms:desktop>


			</section>

					<cms:mobile>
						<div class="form_wrap">
							<p><cms:text constant="form_title"/></p>
							<cms:module
								name="contact_form"
								action="show"
								text_id="contact"
								/>
						</div>
					</cms:mobile>

			<section class="clients">
				<cms:module
					name="gallery"
					action="show_image_list"
					group="clients"
					template="parts/image.xml"
					/>

				<cms:module
						name="articles"
						action="show"
						text_id="offer_article"
						template="parts/article2.xml"
						/>
			</section>

			<section class="features">
				<cms:module
					name="articles"
					action="show_group"
					text_id="features"
					template="parts/show_article_list.xml"
				/>
			</section>

			<section class="why_us">
				<cms:module
					name="articles"
					action="show"
					text_id="why_us_article"
					template="parts/article2.xml"
					/>
			</section>

			<section class="table">
				<cms:desktop>
					<cms:template file="parts/table.xml"/>
				</cms:desktop>

				<cms:mobile>
					<cms:template file="parts/table_mobile.xml"/>
				</cms:mobile>

				<cms:module
					name="gallery"
					action="show_group"
					text_id="feature_images"
					template="parts/gallery_group.xml"
				/>


				<cms:module
					name="articles"
					action="show_group"
					text_id="testimonials"
					template="parts/show_article_list2.xml"
				/>

			</section>

			<footer>
				<div class="footer_content">
					<cms:module
							name="articles"
							action="show"
							text_id="header_article"
							template="parts/footer_article.xml"
							/>
					<a
						href="'tel:'.urlencode(Language::getText('phone'))"
						cms:eval="href"
						class="phone"
						>
						<cms:text constant="phone"/>
						<svg>
							<use
								href="#icon-phone"
								xlink:href="site/images/site-icons.svg#icon-phone"
								/>
						</svg>
					</a>
					<cms:desktop>
						<div class="form_wrap">
							<p><cms:text constant="form_title"/></p>
							<cms:module
								name="contact_form"
								action="show"
								text_id="contact"
								/>
						</div>
					</cms:desktop>
				</div>

				<cms:mobile>
					<div class="form_wrap">
						<p><cms:text constant="form_title"/></p>
						<cms:module
							name="contact_form"
							action="show"
							text_id="contact"
							/>
					</div>
				</cms:mobile>

				<div class="copyright">
					<span><cms:text constant="copyright"/></span>
				</div>

			</footer>

		</body>
	</html>
</document>
